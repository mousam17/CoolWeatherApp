<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sunshine_blue</item>
        <item name="colorPrimaryDark">@color/sunshine_dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="ForeCastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.solid.CoolWeather.NoTitle</item>
    </style>

    <style name="ActionBar.solid.CoolWeather.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/ic_logo</item>
    </style>

    <style name="SettingTheme" parent="AppTheme">

    </style>

    <style name="ForeCastStyle">
        <item name="android:choiceMode">singleChoice</item>
    </style>
</resources>
