    <fragment
        android:id="@+id/forecast_fragment"
        android:name="app.coolweather.develop.tlabs.com.coolweather.ForecastFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <FrameLayout
